<h3 class="field_name">People Keyword Search Results</h3>

<% form_tag("/individual_search", :method => :get) do %>
	<p>
		<span class="search_param"><%= label_tag 'name'%></span>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil%>
		<%= link_to 'back', :controller => 'search', :action => 'index' %>
	</p>
<% end %>

<% @individuals.each do |individual| %>
	<p><%= link_to individual.name, individual_path(individual) %></p>
<% end %>

<% @sidebar = capture do %>
	<%= render :partial => "frontend/search_sidebar_explain" %>
<% end %>