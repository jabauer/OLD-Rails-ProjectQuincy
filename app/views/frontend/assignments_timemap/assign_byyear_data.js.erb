/* This data is used for plotting the location of assignments over time.
The resulting file can be found at /assignYearData.js on the server */


var assignments = [
<% for assignment in @assignments %>
	{
		title: "<%= h assignment.assignment_title.name %>",
		place: "<%= h assignment.location.name %>",
		lat: <%= h assignment.location.lat %>,
		lng: <%= h assignment.location.long %>,
		years: [<% i = assignment.start_year %><% while i <= assignment.end_year %><%= i %>,<% i += 1 %><% end %>],
		person: "<%= h assignment.individual.name %>"
	},
<% end %>
];

var titles = [
<% for assignment_title in @assignment_titles %>
	{title: "<%= h assignment_title.name %>", type: "<%= h assignment_title.assignment_type.name %>"},
<% end %>
];